#!/usr/bin/env bash
set -uo pipefail

layout_laptop() {
  xrandr \
  --output LVDS-1 --primary --mode 1366x768 --pos 0x0 --rotate normal --scale 1.26x1.26 \
  --output VGA-1 --off \
  --output DP-1 --off \
  --output DP-2 --off \
  --output DP-3 --off \
  --output HDMI-1 --off \
  --output HDMI-2 --off \
  --output HDMI-3 --off
}

layout_home() {
  xrandr \
  --output LVDS-1 --off \
  --output VGA-1 --off \
  --output DP-1 --off \
  --output DP-2 --mode 2560x1440 --pos 2560x0 --rotate normal \
  --output DP-3 --primary --mode 2560x1440 --pos 0x0 --rotate normal \
  --output HDMI-1 --off \
  --output HDMI-2 --off \
  --output HDMI-3 --off
}

layout_tv() {
  xrandr \
  --output LVDS-1 --off \
  --output VGA-1 --off \
  --output DP-1 --off \
  --output DP-2 --off \
  --output DP-3 --off \
  --output HDMI-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal \
  --output HDMI-2 --off \
  --output HDMI-3 --off
}

case ${1:-} in
  "laptop")
    layout_laptop
    ;;
  "home")
    layout_home
    ;;
  "tv")
    layout_tv
    ;;
  *) # unknown parameter passed - ignoring
    exit 1
    ;;
esac

[[ ${?} != 0 ]] && layout_laptop && exit 1

i3-msg restart
xset dpms 0 0 600

notify-send "${1^}" "Screen layout enabled" -u low
